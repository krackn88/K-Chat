# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/k-chat

# JWT Token - Generate a strong random key
JWT_SECRET=your_secure_jwt_secret_key_replace_this

# File Storage - Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_BLOB_CONTAINER=combo-data

# Azure OpenAI for AI Integration
AZURE_OPENAI_ENDPOINT=your_endpoint
AZURE_OPENAI_API_KEY=your_api_key
AZURE_OPENAI_DEPLOYMENT_GPT4O=your_deployment_id
AZURE_OPENAI_DEPLOYMENT_O3MINI=your_deployment_id
AZURE_OPENAI_API_VERSION=2024-11-20

# Telegram Bot (if using Telegram integration)
API_ID=your_api_id
API_HASH=your_api_hash
BOT_TOKEN=your_bot_token

# Azure Search Configuration
AZURE_SEARCH_ENDPOINT=your_search_endpoint
AZURE_SEARCH_KEY=your_search_key
AZURE_SEARCH_INDEX=your_search_index

# Azure Cosmos DB configuration
COSMOS_URL=your_cosmos_url
COSMOS_KEY=your_cosmos_key
COSMOS_DB=your_cosmos_db
COSMOS_DB_CONTAINER=memory

# Azure Key Vault configuration (for storing sensitive data)
KEY_VAULT_URL=your_key_vault_url

# GitHub Configuration (for any GitHub integrations)
GITHUB_TOKEN=your_github_token

# Database Configuration (if using SQLite as secondary/alternate DB)
DATABASE_URL=sqlite:///app.db

# Application Configuration
APP_DEBUG=true
MCP_PORT=1337

# Upload Path for Local File Storage
UPLOAD_PATH=./uploads
