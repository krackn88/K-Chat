# Server Configuration
PORT=5000
NODE_ENV=development
MCP_PORT=1337
APP_DEBUG=true

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/k-chat
# Alternative SQLite connection
DATABASE_URL=sqlite:///app.db

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_replace_this

# File Storage (Azure Blob Storage)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_BLOB_CONTAINER=combo-data

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT_GPT4O=gpt-4o
AZURE_OPENAI_DEPLOYMENT_O3MINI=o3-mini
AZURE_OPENAI_API_VERSION=2024-11-20

# Telegram Bot Integration
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Azure Search Configuration
AZURE_SEARCH_ENDPOINT=your_azure_search_endpoint
AZURE_SEARCH_KEY=your_azure_search_key
AZURE_SEARCH_INDEX=your_azure_search_index

# Azure Cosmos DB Configuration
COSMOS_URL=your_cosmos_db_url
COSMOS_KEY=your_cosmos_db_key
COSMOS_DB=your_cosmos_db_name
COSMOS_CONTAINER=your_cosmos_container_name

# Azure Key Vault Configuration
KEY_VAULT_URL=your_key_vault_url

# GitHub Configuration (for API integrations)
GITHUB_TOKEN=your_github_token

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50000000 # 50MB in bytes
